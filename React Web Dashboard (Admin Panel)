import React, { useState, useEffect } from 'react';
import { Plus, Trash2, Edit2, BarChart3, Users, CheckSquare, Save, Eye, Power, TrendingUp } from 'lucide-react';
import { BarChart, Bar, PieChart, Pie, Cell, LineChart, Line, XAxis, YAxis, CartesianGrid, Tooltip, Legend, ResponsiveContainer } from 'recharts';

const COLORS = ['#3b82f6', '#10b981', '#f59e0b', '#ef4444', '#8b5cf6', '#ec4899'];
const API_URL = 'http://localhost:5000/api';

export default function AdminDashboard() {
  const [view, setView] = useState('dashboard');
  const [surveys, setSurveys] = useState([]);
  const [stats, setStats] = useState(null);
  const [currentSurvey, setCurrentSurvey] = useState({
    title: '',
    description: '',
    questions: [],
    isActive: true
  });
  const [analytics, setAnalytics] = useState(null);
  const [selectedSurveyId, setSelectedSurveyId] = useState(null);
  const [loading, setLoading] = useState(false);

  useEffect(() => {
    fetchDashboardStats();
    fetchSurveys();
  }, []);

  const fetchDashboardStats = async () => {
    try {
      const response = await fetch(`${API_URL}/dashboard/stats`);
      const data = await response.json();
      if (data.success) setStats(data.data);
    } catch (error) {
      console.error('Error fetching stats:', error);
    }
  };

  const fetchSurveys = async () => {
    try {
      setLoading(true);
      const response = await fetch(`${API_URL}/surveys`);
      const data = await response.json();
      if (data.success) setSurveys(data.data);
    } catch (error) {
      console.error('Error fetching surveys:', error);
    } finally {
      setLoading(false);
    }
  };

  const fetchAnalytics = async (surveyId) => {
    try {
      setLoading(true);
      const response = await fetch(`${API_URL}/surveys/${surveyId}/analytics`);
      const data = await response.json();
      if (data.success) {
        setAnalytics(data.data);
        setSelectedSurveyId(surveyId);
      }
    } catch (error) {
      console.error('Error fetching analytics:', error);
    } finally {
      setLoading(false);
    }
  };

  const createSurvey = async () => {
    if (!currentSurvey.title || currentSurvey.questions.length === 0) {
      alert('Please add title and at least one question');
      return;
    }

    try {
      setLoading(true);
      const response = await fetch(`${API_URL}/surveys`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(currentSurvey)
      });
      const data = await response.json();
      
      if (data.success) {
        alert('Survey created successfully!');
        setCurrentSurvey({ title: '', description: '', questions: [], isActive: true });
        fetchSurveys();
        fetchDashboardStats();
        setView('surveys');
      }
    } catch (error) {
      alert('Error creating survey: ' + error.message);
    } finally {
      setLoading(false);
    }
  };

  const deleteSurvey = async (id) => {
    if (!window.confirm('Delete this survey? All responses will be lost.')) return;

    try {
      const response = await fetch(`${API_URL}/surveys/${id}`, { method: 'DELETE' });
      const data = await response.json();
      
      if (data.success) {
        alert('Survey deleted successfully');
        fetchSurveys();
        fetchDashboardStats();
      }
    } catch (error) {
      alert('Error deleting survey: ' + error.message);
    }
  };

  const toggleSurveyStatus = async (id) => {
    try {
      const response = await fetch(`${API_URL}/surveys/${id}/toggle`, { method: 'PATCH' });
      const data = await response.json();
      
      if (data.success) {
        fetchSurveys();
        fetchDashboardStats();
      }
    } catch (error) {
      alert('Error toggling survey: ' + error.message);
    }
  };

  const addQuestion = (type) => {
    const newQuestion = {
      id: `q_${Date.now()}`,
      type,
      question: '',
      options: type === 'multiple-choice' || type === 'checkbox' ? ['Option 1', 'Option 2'] : [],
      required: false
    };
    setCurrentSurvey({
      ...currentSurvey,
      questions: [...currentSurvey.questions, newQuestion]
    });
  };

  const updateQuestion = (id, field, value) => {
    setCurrentSurvey({
      ...currentSurvey,
      questions: currentSurvey.questions.map(q =>
        q.id === id ? { ...q, [field]: value } : q
      )
    });
  };

  const deleteQuestion = (id) => {
    setCurrentSurvey({
      ...currentSurvey,
      questions: currentSurvey.questions.filter(q => q.id !== id)
    });
  };

  const addOption = (questionId) => {
    setCurrentSurvey({
      ...currentSurvey,
      questions: currentSurvey.questions.map(q =>
        q.id === questionId
          ? { ...q, options: [...q.options, `Option ${q.options.length + 1}`] }
          : q
      )
    });
  };

  const updateOption = (questionId, optionIndex, value) => {
    setCurrentSurvey({
      ...currentSurvey,
      questions: currentSurvey.questions.map(q =>
        q.id === questionId
          ? { ...q, options: q.options.map((opt, idx) => idx === optionIndex ? value : opt) }
          : q
      )
    });
  };

  return (
    <div className="min-h-screen bg-gradient-to-br from-slate-50 to-slate-100">
      <nav className="bg-white shadow-lg border-b-4 border-indigo-600">
        <div className="max-w-7xl mx-auto px-4 py-4">
          <div className="flex justify-between items-center">
            <h1 className="text-3xl font-bold bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text text-transparent">
              Survey Admin Dashboard
            </h1>
            <div className="flex gap-2">
              <button
                onClick={() => setView('dashboard')}
                className={`px-4 py-2 rounded-lg font-medium transition-all ${
                  view === 'dashboard'
                    ? 'bg-indigo-600 text-white shadow-lg'
                    : 'bg-gray-200 text-gray-700 hover:bg-gray-300'
                }`}
              >
                <BarChart3 className="inline mr-2" size={18} />
                Dashboard
              </button>
              <button
                onClick={() => setView('surveys')}
                className={`px-4 py-2 rounded-lg font-medium transition-all ${
                  view === 'surveys'
                    ? 'bg-indigo-600 text-white shadow-lg'
                    : 'bg-gray-200 text-gray-700 hover:bg-gray-300'
                }`}
              >
                <Eye className="inline mr-2" size={18} />
                Surveys
              </button>
              <button
                onClick={() => setView('create')}
                className={`px-4 py-2 rounded-lg font-medium transition-all ${
                  view === 'create'
                    ? 'bg-indigo-600 text-white shadow-lg'
                    : 'bg-gray-200 text-gray-700 hover:bg-gray-300'
                }`}
              >
                <Plus className="inline mr-2" size={18} />
                Create
              </button>
              <button
                onClick={() => setView('analytics')}
                className={`px-4 py-2 rounded-lg font-medium transition-all ${
                  view === 'analytics'
                    ? 'bg-indigo-600 text-white shadow-lg'
                    : 'bg-gray-200 text-gray-700 hover:bg-gray-300'
                }`}
              >
                <TrendingUp className="inline mr-2" size={18} />
                Analytics
              </button>
            </div>
          </div>
        </div>
      </nav>

      <div className="max-w-7xl mx-auto px-4 py-8">
        {view === 'dashboard' && stats && (
          <div className="space-y-6">
            <h2 className="text-3xl font-bold text-gray-800 mb-6">Dashboard Overview</h2>
            
            <div className="grid grid-cols-1 md:grid-cols-4 gap-4">
              <div className="bg-gradient-to-br from-blue-500 to-blue-600 text-white p-6 rounded-xl shadow-xl">
                <Users className="mb-3" size={40} />
                <h3 className="text-3xl font-bold">{stats.totalSurveys}</h3>
                <p className="text-blue-100">Total Surveys</p>
              </div>
              <div className="bg-gradient-to-br from-green-500 to-green-600 text-white p-6 rounded-xl shadow-xl">
                <CheckSquare className="mb-3" size={40} />
                <h3 className="text-3xl font-bold">{stats.activeSurveys}</h3>
                <p className="text-green-100">Active Surveys</p>
              </div>
              <div className="bg-gradient-to-br from-purple-500 to-purple-600 text-white p-6 rounded-xl shadow-xl">
                <BarChart3 className="mb-3" size={40} />
                <h3 className="text-3xl font-bold">{stats.totalResponses}</h3>
                <p className="text-purple-100">Total Responses</p>
              </div>
              <div className="bg-gradient-to-br from-orange-500 to-orange-600 text-white p-6 rounded-xl shadow-xl">
                <TrendingUp className="mb-3" size={40} />
                <h3 className="text-3xl font-bold">{stats.averageResponsesPerSurvey}</h3>
                <p className="text-orange-100">Avg Responses</p>
              </div>
            </div>

            <div className="bg-white rounded-xl shadow-xl p-6">
              <h3 className="text-2xl font-bold mb-4">Recent Responses</h3>
              <div className="space-y-3">
                {stats.recentResponses.map((response, idx) => (
                  <div key={idx} className="flex items-center justify-between p-4 bg-gray-50 rounded-lg border border-gray-200">
                    <div>
                      <p className="font-semibold text-gray-800">{response.surveyId?.title || 'Unknown Survey'}</p>
                      <p className="text-sm text-gray-500">
                        {new Date(response.submittedAt).toLocaleString()}
                      </p>
                    </div>
                    <span className="px-3 py-1 bg-green-100 text-green-700 rounded-full text-sm font-medium">
                      Completed
                    </span>
                  </div>
                ))}
              </div>
            </div>
          </div>
        )}

        {view === 'surveys' && (
          <div className="bg-white rounded-xl shadow-xl p-6">
            <h2 className="text-3xl font-bold mb-6 text-gray-800">All Surveys</h2>
            {loading ? (
              <p className="text-center text-gray-500 py-8">Loading...</p>
            ) : surveys.length === 0 ? (
              <p className="text-center text-gray-500 py-8">No surveys yet. Create your first one!</p>
            ) : (
              <div className="space-y-4">
                {surveys.map(survey => (
                  <div key={survey._id} className="border-2 border-gray-200 rounded-lg p-6 hover:shadow-lg transition bg-gradient-to-r from-gray-50 to-white">
                    <div className="flex justify-between items-start">
                      <div className="flex-1">
                        <div className="flex items-center gap-3 mb-2">
                          <h3 className="text-xl font-bold text-gray-800">{survey.title}</h3>
                          <span className={`px-3 py-1 rounded-full text-xs font-semibold ${
                            survey.isActive 
                              ? 'bg-green-100 text-green-700' 
                              : 'bg-gray-100 text-gray-600'
                          }`}>
                            {survey.isActive ? 'Active' : 'Inactive'}
                          </span>
                        </div>
                        <p className="text-gray-600 mb-2">{survey.description}</p>
                        <div className="flex gap-4 text-sm text-gray-500">
                          <span>{survey.questions.length} questions</span>
                          <span>Created: {new Date(survey.createdAt).toLocaleDateString()}</span>
                        </div>
                      </div>
                      <div className="flex gap-2">
                        <button
                          onClick={() => toggleSurveyStatus(survey._id)}
                          className={`p-2 rounded-lg transition ${
                            survey.isActive 
                              ? 'bg-green-100 text-green-700 hover:bg-green-200' 
                              : 'bg-gray-100 text-gray-600 hover:bg-gray-200'
                          }`}
                          title={survey.isActive ? 'Deactivate' : 'Activate'}
                        >
                          <Power size={20} />
                        </button>
                        <button
                          onClick={() => {
                            fetchAnalytics(survey._id);
                            setView('analytics');
                          }}
                          className="p-2 bg-blue-100 text-blue-700 rounded-lg hover:bg-blue-200 transition"
                          title="View Analytics"
                        >
                          <BarChart3 size={20} />
                        </button>
                        <button
                          onClick={() => deleteSurvey(survey._id)}
                          className="p-2 bg-red-100 text-red-700 rounded-lg hover:bg-red-200 transition"
                          title="Delete"
                        >
                          <Trash2 size={20} />
                        </button>
                      </div>
                    </div>
                  </div>
                ))}
              </div>
            )}
          </div>
        )}

        {view === 'create' && (
          <div className="bg-white rounded-xl shadow-xl p-6">
            <h2 className="text-3xl font-bold mb-6 text-gray-800">Create New Survey</h2>
            
            <div className="mb-6">
              <label className="block text-sm font-medium text-gray-700 mb-2">Survey Title *</label>
              <input
                type="text"
                placeholder="Enter survey title"
                value={currentSurvey.title}
                onChange={(e) => setCurrentSurvey({ ...currentSurvey, title: e.target.value })}
                className="w-full p-3 border-2 border-gray-300 rounded-lg text-xl font-semibold focus:border-indigo-500 focus:outline-none"
              />
            </div>

            <div className="mb-6">
              <label className="block text-sm font-medium text-gray-700 mb-2">Description</label>
              <textarea
                placeholder="Enter survey description"
                value={currentSurvey.description}
                onChange={(e) => setCurrentSurvey({ ...currentSurvey, description: e.target.value })}
                className="w-full p-3 border-2 border-gray-300 rounded-lg focus:border-indigo-500 focus:outline-none"
                rows="3"
              />
            </div>

            <div className="mb-6">
              <h3 className="text-lg font-semibold mb-3">Add Questions</h3>
              <div className="flex gap-2 flex-wrap">
                <button
                  onClick={() => addQuestion('multiple-choice')}
                  className="px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600 transition shadow"
                >
                  Multiple Choice
                </button>
                <button
                  onClick={() => addQuestion('checkbox')}
                  className="px-4 py-2 bg-green-500 text-white rounded-lg hover:bg-green-600 transition shadow"
                >
                  Checkbox
                </button>
                <button
                  onClick={() => addQuestion('text')}
                  className="px-4 py-2 bg-purple-500 text-white rounded-lg hover:bg-purple-600 transition shadow"
                >
                  Text
                </button>
                <button
                  onClick={() => addQuestion('rating')}
                  className="px-4 py-2 bg-yellow-500 text-white rounded-lg hover:bg-yellow-600 transition shadow"
                >
                  Rating
                </button>
                <button
                  onClick={() => addQuestion('boolean')}
                  className="px-4 py-2 bg-pink-500 text-white rounded-lg hover:bg-pink-600 transition shadow"
                >
                  Yes/No
                </button>
              </div>
            </div>

            <div className="space-y-4 mb-6">
              {currentSurvey.questions.map((question, idx) => (
                <div key={question.id} className="border-2 border-gray-300 rounded-lg p-4 bg-gray-50">
                  <div className="flex justify-between items-start mb-3">
                    <span className="text-sm font-semibold text-gray-500 px-3 py-1 bg-white rounded-full">
                      Question {idx + 1} - {question.type}
                    </span>
                    <button
                      onClick={() => deleteQuestion(question.id)}
                      className="text-red-500 hover:text-red-700 p-1"
                    >
                      <Trash2 size={18} />
                    </button>
                  </div>

                  <input
                    type="text"
                    placeholder="Enter your question"
                    value={question.question}
                    onChange={(e) => updateQuestion(question.id, 'question', e.target.value)}
                    className="w-full p-2 border border-gray-300 rounded mb-3 focus:border-indigo-500 focus:outline-none"
                  />

                  {(question.type === 'multiple-choice' || question.type === 'checkbox') && (
                    <div className="space-y-2">
                      {question.options.map((option, optIdx) => (
                        <input
                          key={optIdx}
                          type="text"
                          value={option}
                          onChange={(e) => updateOption(question.id, optIdx, e.target.value)}
                          className="w-full p-2 border border-gray-300 rounded focus:border-indigo-500 focus:outline-none"
                          placeholder={`Option ${optIdx + 1}`}
                        />
                      ))}
                      <button
                        onClick={() => addOption(question.id)}
                        className="text-sm text-indigo-600 hover:text-indigo-800 font-medium"
                      >
                        + Add Option
                      </button>
                    </div>
                  )}

                  <label className="flex items-center mt-3">
                    <input
                      type="checkbox"
                      checked={question.required}
                      onChange={(e) => updateQuestion(question.id, 'required', e.target.checked)}
                      className="mr-2 w-4 h-4"
                    />
                    <span className="text-sm text-gray-600 font-medium">Required question</span>
                  </label>
                </div>
              ))}
            </div>

            {currentSurvey.questions.length > 0 && (
              <button
                onClick={createSurvey}
                disabled={loading}
                className="w-full bg-gradient-to-r from-indigo-600 to-purple-600 text-white py-3 rounded-lg font-semibold hover:from-indigo-700 hover:to-purple-700 transition flex items-center justify-center shadow-lg disabled:opacity-50"
              >
                <Save className="mr-2" size={20} />
                {loading ? 'Creating...' : 'Create Survey'}
              </button>
            )}
          </div>
        )}

        {view === 'analytics' && (
          <div className="bg-white rounded-xl shadow-xl p-6">
            <h2 className="text-3xl font-bold mb-6 text-gray-800">Analytics</h2>
            
            {!analytics ? (
              <div className="text-center py-12">
                <BarChart3 size={64} className="mx-auto text-gray-300 mb-4" />
                <p className="text-gray-500 mb-4">Select a survey to view analytics</p>
                <button
                  onClick={() => setView('surveys')}
                  className="px-6 py-3 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition"
                >
                  View Surveys
                </button>
              </div>
            ) : (
              <div>
                <div className="mb-8 p-4 bg-gradient-to-r from-indigo-50 to-purple-50 rounded-lg border-2 border-indigo-200">
                  <h3 className="text-2xl font-bold mb-2">
                    {surveys.find(s => s._id === selectedSurveyId)?.title}
                  </h3>
                  <p className="text-lg text-gray-600">
                    Total Responses: <span className="font-bold text-indigo-600">{analytics.totalResponses}</span>
                  </p>
                </div>

                {analytics.questions.map((item, idx) => (
                  <div key={idx} className="mb-10 p-6 bg-gray-50 rounded-xl border border-gray-200">
                    <h4 className="text-xl font-bold mb-6 text-gray-800">{item.question}</h4>
                    
                    {(item.type === 'multiple-choice' || item.type === 'boolean') && item.data.length > 0 && (
                      <ResponsiveContainer width="100%" height={300}>
                        <BarChart data={item.data}>
                          <CartesianGrid strokeDasharray="3 3" />
                          <XAxis dataKey="name" />
                          <YAxis />
                          <Tooltip />
                          <Bar dataKey="value" fill="#3b82f6" />
                        </BarChart>
                      </ResponsiveContainer>
                    )}
                    
                    {item.type === 'checkbox' && item.data.length > 0 && (
                      <ResponsiveContainer width="100%" height={300}>
                        <PieChart>
                          <Pie
                            data={item.data}
                            cx="50%"
                            cy="50%"
                            labelLine={false}
                            label={({ name, percent }) => `${name}: ${(percent * 100).toFixed(0)}%`}
                            outerRadius={100}
                            fill="#8884d8"
                            dataKey="value"
                          >
                            {item.data.map((entry, index) => (
                              <Cell key={`cell-${index}`} fill={COLORS[index % COLORS.length]} />
                            ))}
                          </Pie>
                          <Tooltip />
                        </PieChart>
                      </ResponsiveContainer>
                    )}
                    
                    {item.type === 'rating' && item.data.distribution && (
                      <div>
                        <div className="text-center mb-6 p-4 bg-indigo-100 rounded-lg">
                          <p className="text-4xl font-bold text-indigo-600">{item.data.average}</p>
                          <p className="text-gray-600">Average Rating (out of 5)</p>
                          <p className="text-sm text-gray-500 mt-1">{item.data.total} responses</p>
                        </div>
                        <ResponsiveContainer width="100%" height={250}>
                          <BarChart data={Object.entries(item.data.distribution).map(([k, v]) => ({ rating: k, count: v }))}>
                            <CartesianGrid strokeDasharray="3 3" />
                            <XAxis dataKey="rating" />
                            <YAxis />
                            <Tooltip />
                            <Bar dataKey="count" fill="#8b5cf6" />
                          </BarChart>
                        </ResponsiveContainer>
                      </div>
                    )}
                    
                    {item.type === 'text' && item.data.length > 0 && (
                      <div className="space-y-3">
                        <p className="font-semibold text-gray-700 mb-3">{item.data.length} text responses:</p>
                        {item.data.map((text, i) => (
                          <div key={i} className="p-4 bg-white rounded-lg border border-gray-200 shadow-sm">
                            <p className="text-gray-800">{text}</p>
                          </div>
                        ))}
                      </div>
                    )}
                  </div>
                ))}
              </div>
            )}
          </div>
        )}
      </div>
    </div>
  );
}
